<div>
    <h1>お家に近いsento</h1>
    <a href="/sento/search">newSento</a>
    <a href="/logout">ログアウト</a>
    <a href="/mypage">マイページ</a>
    <a href="/post">みんなのsento</a>
    <% if !@sento.nil? %>
        <% @sento.each do |sento| %>
            <div class="sento_container">
                <h3><%= sento.name %></h3>
                <p>ここから〇〇分!!</p>
                <p>費用｜<%= sento.cost %></p>
                <p>営業時間｜<%= sento.open_time %></p>
                <p>おすすめ｜<%= sento.osusume %></p>
                <form action="/sento/<%= sento.id %>/delete" method="post">
                    <input type="submit" value="削除">
                </form>
            </div>
        <% end %>
    <% end %>
</div>